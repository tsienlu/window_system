<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant value="simple" name="struts.ui.theme"/>
	<constant value="utf-8" name="struts.il8n.encodeing"></constant>
	
	
	<package name="default" extends="struts-default">
		
		<action name="DspUserAction" class="com.microsoft.Test_struts_jpa.action.DspUserAction">
			<result name="loginsuccess">/xtgl/view/login.jsp</result>
			<result name="success">/xtgl/view/Admin/index.jsp</result>
			<result name="register">/xtgl/view/Login/register.jsp</result>
			<result name="error">/xtgl/view/error.jsp</result>
		</action>
		
		<!-- 需求Action -->
		<action name="DspAdAction" class="com.microsoft.Test_struts_jpa.action.DspAdAction">
			<result name="success">/xtgl/view/Admin/query.jsp</result>
			<!-- 需求统计 -->
			<result name="needCount">/xtgl/view/Admin/querystat.jsp</result>
			<!-- 需求详情 -->
			<result name="adDetail">/xtgl/view/Admin/detail.jsp</result>
			<!-- 返回添加页面 -->
			<result name="errorPrio">/xtgl/view/Admin/queryadd.jsp</result>
			<result name="error">/xtgl/view/error.jsp</result>
		</action>
		
		<!-- 域名统计Action -->
		<action name="DspDomainAction" class="com.microsoft.Test_struts_jpa.action.DspDomainAction">
			<result name="success">/xtgl/view/Admin/domainstat.jsp</result>
			<result name="error">/xtgl/view/error.jsp</result>
		</action>
		
		
		
	</package>
	
</struts>    
